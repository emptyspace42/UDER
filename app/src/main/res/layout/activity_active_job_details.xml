<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FB0C4"
    tools:context="uder.uder.Activities.ActiveJobDetails">

    <TextView
        android:id="@+id/tvActiveJobMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active Job Details"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lv_activeJobList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:layout_marginTop="60dp"/>

    <ImageButton
        android:id="@+id/bJobDetailsGoBack"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/goback"
        android:layout_marginRight="95dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp" />


</RelativeLayout>


