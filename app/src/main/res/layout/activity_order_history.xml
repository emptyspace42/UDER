<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FB0C4"
    tools:context="uder.uder.Activities.OrderHistoryActivity">

    <TextView
        android:text="Order History:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOrderHistoryMessage"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/lv_orderHistoryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="60dp"
        android:layout_above="@+id/b_goBackOrderHistory" />


    <ImageButton
        android:id="@+id/b_goBackOrderHistory"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/goback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="69dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
