<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FB0C4"
    tools:context="uder.uder.Activities.LoginActivity">

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_welcome"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="#486486"
        android:textColorHint="#486486"
        android:textColorLink="#F0F3F6" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_username"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#486486"
        android:textColorHighlight="#7087A2"
        android:textColorHint="#486486"
        android:textColorLink="#F0F3F6" />

    <!--<Button-->
        <!--android:id="@+id/b_login"-->
        <!--android:layout_width="250dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignStart="@+id/et_password"-->
        <!--android:layout_below="@+id/et_password"-->
        <!--android:layout_marginTop="45dp"-->
        <!--android:background="#CDD6E1"-->
        <!--android:elevation="2dp"-->
        <!--android:text="Login"-->
        <!--android:textColor="#486486"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold" />-->

    <ImageButton
        android:id="@+id/b_login"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/et_password"
        android:background="@drawable/login"
        android:layout_marginTop="45dp"
        android:elevation="2dp"
        android:layout_below="@+id/et_password" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Click Here to register a new user"
        android:textAlignment="center"
        android:textColor="#486486"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#486486"
        android:padding="13dp"
        android:text="Welcome to UDER, please enter your username and password below to get started!"
        android:textAlignment="center"
        android:textColor="#F0F3F6"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_register"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/driver_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/tv_register"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:elevation="7dp"
            android:src="@mipmap/carflat" />

        <ImageButton
            android:id="@+id/user_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/tv_register"
            android:layout_weight="0.95"
            android:background="#00ffffff"
            android:elevation="7dp"
            android:src="@mipmap/uder_launcher" />
    </LinearLayout>

</RelativeLayout>
