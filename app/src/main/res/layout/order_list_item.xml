<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#486486"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:src="@drawable/ic_order_item" />

    <TextView
        android:id="@+id/orderProducts"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="end|fill_vertical"
        android:maxLines="9"
        android:text="List of Products goes here"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="#F0F3F6" />

    <TextView
        android:id="@+id/orderHeader"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_above="@id/orderProducts"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical"
        android:text="Order ID and Address go here"
        android:textColor="#F0F3F6"
        android:textSize="16sp"
        android:textStyle="normal|bold" />
</RelativeLayout>