<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9FB0C4"
    android:orientation="vertical"
    tools:context="uder.uder.Activities.ProductListActivity">

    <TextView
        android:id="@+id/productSelectMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/product_select_message"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="#486486"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <ListView
        android:id="@+id/lv_productList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/b_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:background="#CDD6E1"
        android:text="Checkout"
        android:textColor="#486486"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/b_checkout"
        android:layout_marginStart="45dp"
        android:background="#CDD6E1"
        android:text="Go Back"
        android:textColor="#486486"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
