<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FB0C4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uder.uder.Activities.UserActivity"
    tools:showIn="@layout/app_bar_user">

    <TextView
        android:id="@+id/tv_cartMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Shopping Cart:"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="#486486"
        android:textSize="20dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/tv_filterMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cartContents"
        android:text="Active Filters:"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColor="#486486"
        android:textSize="20dp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/tv_filterContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_filterMessage"
        android:paddingTop="3dp"
        android:text="TextView"
        android:textColor="#486486"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_cartContents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cartMessage"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:text="TextView"
        android:textColor="#486486"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_filterContents"
        android:layout_marginTop="111dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_clearCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#CDD6E1"
            android:elevation="2dp"
            android:text="Clear Cart"
            android:textColor="#486486"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b_clearFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#CDD6E1"
            android:text="Reset Filters"
            android:textColor="#486486"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
